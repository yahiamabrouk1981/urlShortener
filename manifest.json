{
  "manifest_version": 3,
  "name": "URL Shortener",
  "version": "1.0",
  "description": "Shorten URLs with a click.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": ["activeTab", "storage", "webRequest", "webRequestBlocking"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["http://localhost:5000/*"]
}
